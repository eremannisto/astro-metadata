---
export type Props = {
  index?      : boolean
  follow?     : boolean
  noArchive?  : boolean
  noSnippet?  : boolean
  extra?      : string
}

const {
  index = true,
  follow = true,
  noArchive,
  noSnippet,
  extra,
} = Astro.props

// Combine the directives into a comma separated string,
// for example: "index, follow, noarchive, nosnippet"
const directives = [
  index ? "index" : "noindex",
  follow ? "follow" : "nofollow",
  noArchive && "noarchive",
  noSnippet && "nosnippet",
  extra,
].filter(Boolean).join(", ")
---

<meta name="robots" content={directives} />